{
  "manifest_version": 3,
  "name": "Spoiler Checker for YouTube",
  "description": "A Chrome extension to avoid spoilers on YouTube",
  "version": "2.0.0",
  "icons": {
    "16": "logos/lee_sin_logo_16.png",
    "32": "logos/lee_sin_logo_32.png",
    "48": "logos/lee_sin_logo_48.png",
    "128": "logos/lee_sin_logo_128.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}